/* 顶部要固定定位   标题要居中    */

.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  background: #0d0b21;
  border-bottom: 1px solid #666464;
}

.switchBtn {
  position: absolute;
  top: 75rpx;
  left: 30rpx;
  zoom: 0.8;
  z-index: 1;
}

/* 标题要居中 */

.nav-title {
  position: relative;
  top: 20rpx;
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: auto;
  color: #f9faf5;
}

.search {
  width: 85%;
  line-height: 15rpx;
  background: #f9faf5;
  margin: 0 auto;
  border-radius: 20rpx;
  text-align: center;
  min-height: 50rpx;
}
.yitiaoxian{
  padding-top: 10rpx;
  border-top: 2px solid #9b9a9a;
}
