/* 顶部要固定定位   标题要居中    */

.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  background: #0d0b21;
  z-index: 9999999;
  border-bottom: 1px solid #666464;
}

.switchBtn {
  position: absolute;
  top: 75rpx;
  left: 30rpx;
  zoom: 0.8;
}

/* 标题要居中 */

.nav-title {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: auto;
  color: #f9faf5;
}

.search {
  width: 90%;
  line-height: 15rpx;
  background: #f9faf5;
  margin: 140rpx auto;
  border-radius: 20rpx;
  text-align: center;
  min-height: 1rem;
}
