page {
  height: 100%;
}

.sharebigbox {
  height: 100%;
}

.share-top {
  display: -webkit-flex;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-content: space-between;
  width: 100%;
  height: 160rpx;
  margin-top: 40rpx;
}

.share-top .user-box {
  width: 28%;
  line-height: 65rpx;
  text-align: center;
  border: 1px solid #f9faf5;
  border-radius: 65rpx;
  box-shadow: 0 0 10rpx #f9faf5;
  font-weight: 900;
  font-size: 28rpx;
}

.share-top .user-box:nth-child(3n+1) {
  margin-left: 20rpx;
}

.share-top .user-box:nth-child(3n) {
  margin-right: 20rpx;
}

.share-bottom {
  width: 100%;
  margin-top: 80rpx;
}

.share-bottom .music-title {
  margin-left: 30rpx;
  font-size: 32rpx;
  font-weight: 900;
}

.share-bottom .user-comment {
  margin-left: 20rpx;
  padding: 20rpx 50rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.share-bottom .user-message {
  margin-top: 10rpx;
}

.share-bottom .user-message .userimg {
  float: left;
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  border: 1px solid #f9faf5;
  border-radius: 50%;
}

.share-bottom .user-message .username {
  float: left;
  line-height: 60rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}
