.intabBarbox {
  display: inline-block;
  width: 25%;
  line-height: 30rpx;
  text-align: center;
  font-size: 28rpx;
  position: relative;
}

.intabBarimg {
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
}

.tabBarbox {
  padding-top: 10rpx;
  border-top: 1px solid #696969;
}

.bfbtn {
  padding: 0 20rpx;
  border: 1px solid #f9faf5;
  box-shadow: 0 0 10rpx #12b7f5 inset;
}

.bfbtn .gimage {
  height: 70rpx;
  width: 70rpx;
  position: relative;
  bottom: 10rpx;
  border: 1px solid transparent;
  border-radius: 50%;
  animation: headRotate 4s linear infinite;
}

.bfbtn text {
  margin-left: 20rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  position: relative;
  bottom: 25rpx;
}

.bottztbtn {
  float: right;
  width: 60rpx;
  height: 60rpx;
  border: 1px solid transparent;
  border-radius: 50%;
  margin-top: 10rpx;
  position: absolute;
  bottom: 125rpx;
  right: 20rpx;
}

.bottztbtn:hover {
  box-shadow: 0 0 10rpx #f9faf5;
}

.Playbackpage {
  height: 90vh;
  background: white;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  padding: 1rpx 72rpx;
}

.bfpagereturn {
  display: block;
  width: 25rpx;
  height: 25rpx;
  border-right: 6rpx solid #f9faf5;
  border-bottom: 6rpx solid #f9faf5;
  margin-top:35rpx;
  transform: rotate(45deg);
}

.bfpagetoptext {
  font-size: 24rpx;
  display: inline-block;
  letter-spacing: 2rpx;
  position: absolute;
  top: 45rpx;
  left: 50%;
  transform: translateX(-50%);
}

.bfpagetopbigimg {
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  height: 600rpx;
  background: pink;
  position: absolute;
  margin: 50rpx auto 0;
  border: 1px solid transparent;
  border-radius: 20rpx;
}

.Play-song-name{
  margin-top: 720rpx;
  font-weight: 900;
  letter-spacing: 2rpx;
}
.Play-singer{
  margin-top: 15rpx;
  color: rgb(143, 143, 143);
  font-size: 24rpx;
}
.Play-Lyric{
  margin-top: 15rpx;
  color: rgb(143, 143, 143);
  font-size: 24rpx;
}
.Play-heart{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 72rpx;
  top: 810rpx;
}
@keyframes headRotate {
  0% {
    transform: rotate(0deg);
  }

  50% {
    transform: rotate(180deg);
  }

  100% {
    transform: rotate(360deg);
  }
}
